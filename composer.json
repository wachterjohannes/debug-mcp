{
  "name": "wachterjohannes/debug-mcp",
  "description": "Core extensible MCP server implementation in PHP with plugin architecture",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Johannes Wachter",
      "email": "johannes@wachter.cloud"
    }
  ],
  "require": {
    "php": "^8.1",
    "mcp/sdk": "^0.1.0",
    "symfony/console": "^5.4|^6.4|^7.4|^8.0",
    "psr/log": "^2.0|^3.0",
    "symfony/finder": "^6.4 || ^7.3 || ^8.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Wachterjohannes\\DebugMcp\\": "src/",
      "Wachterjohannes\\Mcp\\": "mcp/"
    }
  },
  "extra": {
    "wachterjohannes/debug-mcp": {
      "classes": []
    }
  },
  "bin": [
    "bin/debug-mcp"
  ],
  "scripts": {
    "cs-fix": "php-cs-fixer fix"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
