{
  "name": "symfony/ai-mate",
  "description": "AI development assistant MCP server for Symfony projects",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Symfony Community",
      "homepage": "https://symfony.com/contributors"
    }
  ],
  "require": {
    "php": "^8.1",
    "mcp/sdk": "^0.1.0",
    "symfony/console": "^5.4|^6.4|^7.4|^8.0",
    "psr/log": "^2.0|^3.0",
    "symfony/finder": "^6.4 || ^7.3 || ^8.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Symfony\\AI\\Mate\\": "src/",
      "Symfony\\AI\\Mate\\Mcp\\": "mcp/"
    }
  },
  "extra": {
    "symfony/ai-mate": {
      "classes": []
    }
  },
  "bin": [
    "bin/mate"
  ],
  "scripts": {
    "cs-fix": "php-cs-fixer fix"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
